  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sendpatch/sendpatch-node"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
